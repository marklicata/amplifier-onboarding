# Amplifier Chat Configuration
# Copy this file to .env and fill in your values

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Alternative providers (uncomment to use)
# OPENAI_API_KEY=your-openai-api-key-here
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=your-azure-endpoint-here

# Amplifier API Configuration
# Set to 'true' to use REST API, 'false' to use direct library imports
AMPLIFIER_USE_API=true

# Amplifier API Service URL
# Localhost (development): http://localhost:8765 (note: HTTP not HTTPS for test instance)
# Production: https://amplifier-api.gentlebay-e0c2022c.eastus.azurecontainerapps.io/
AMPLIFIER_API_URL=http://localhost:8765

# Amplifier API Timeout (milliseconds)
AMPLIFIER_API_TIMEOUT=60000

# Amplifier API Key (application-level authentication)
# Get this by registering your application with the amplifier-api service
AMPLIFIER_API_KEY=your-api-key-here

# Amplifier Application ID
AMPLIFIER_APP_ID=your-app-id-here
