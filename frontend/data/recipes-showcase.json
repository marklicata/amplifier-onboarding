{
  "recipes": [
    {
      "id": "comprehensive-code-review",
      "name": "Comprehensive Code Review",
      "description": "Multi-perspective code analysis covering architecture, bugs, security, and best practices. Get senior developer, QA engineer, and security expert review in 3 minutes.",
      "category": "code-quality",
      "difficulty": "beginner",
      "duration": "2-3 minutes",
      "agents": ["zen-architect", "bug-hunter", "security-guardian"],
      "valueProposition": "Get a senior developer, QA engineer, and security expert to review your code in 3 minutes.",
      "useCases": [
        "Pre-commit code quality checks",
        "Pull request reviews",
        "Legacy code assessment",
        "Security vulnerability scanning",
        "Best practices validation"
      ],
      "inputs": {
        "file_path": {
          "type": "file",
          "description": "Path to file to analyze",
          "required": true,
          "example": "src/auth.py"
        },
        "language": {
          "type": "select",
          "description": "Programming language",
          "options": ["python", "javascript", "typescript", "java", "go"],
          "default": "python"
        },
        "focus_areas": {
          "type": "multiselect",
          "description": "Areas to focus on",
          "options": ["security", "performance", "style", "architecture"],
          "default": ["security", "architecture"]
        }
      },
      "outputs": {
        "format": "markdown",
        "includes": [
          "Severity-scored issue list",
          "Architectural recommendations",
          "Security vulnerabilities with CVSS scores",
          "Refactoring suggestions"
        ]
      },
      "tags": ["code-review", "security", "architecture", "quality"]
    },
    {
      "id": "api-documentation-generator",
      "name": "API Documentation Generator",
      "description": "Analyzes code and generates comprehensive API documentation with examples. Ship beautiful API docs without writing a single sentence.",
      "category": "documentation",
      "difficulty": "beginner",
      "duration": "2 minutes",
      "agents": ["explorer", "zen-architect"],
      "valueProposition": "Ship beautiful API docs without writing a single sentence.",
      "useCases": [
        "Generate OpenAPI/Swagger specs",
        "Create API reference documentation",
        "Build getting started guides",
        "Generate code examples",
        "Document REST endpoints"
      ],
      "inputs": {
        "api_files": {
          "type": "files",
          "description": "API code files to document",
          "required": true,
          "example": "src/api/**/*.py"
        },
        "format": {
          "type": "select",
          "description": "Output format",
          "options": ["openapi", "markdown", "html"],
          "default": "openapi"
        }
      },
      "outputs": {
        "format": "openapi/markdown",
        "includes": [
          "Complete API documentation",
          "Interactive examples",
          "Error handling guide",
          "Quick start guide"
        ]
      },
      "tags": ["documentation", "api", "openapi", "swagger"]
    },
    {
      "id": "security-audit-suite",
      "name": "Security Audit Suite",
      "description": "Comprehensive security analysis covering code vulnerabilities, dependencies, and configuration. Enterprise-grade security audit in minutes, not days.",
      "category": "security",
      "difficulty": "intermediate",
      "duration": "4-5 minutes",
      "agents": ["security-guardian", "bug-hunter", "zen-architect"],
      "valueProposition": "Enterprise-grade security audit in minutes, not days.",
      "useCases": [
        "Pre-deployment security checks",
        "OWASP compliance validation",
        "Dependency vulnerability scanning",
        "Authentication/authorization review",
        "Security best practices audit"
      ],
      "inputs": {
        "source_code": {
          "type": "directory",
          "description": "Source code directory",
          "required": true,
          "example": "src/"
        },
        "config_files": {
          "type": "files",
          "description": "Configuration files to check",
          "required": false,
          "example": "config/*.yaml"
        },
        "compliance": {
          "type": "select",
          "description": "Compliance framework",
          "options": ["owasp-top-10", "pci-dss", "hipaa", "general"],
          "default": "owasp-top-10"
        }
      },
      "outputs": {
        "format": "markdown",
        "includes": [
          "Vulnerability report with CVSS scores",
          "Exploitation scenarios",
          "Remediation guidance",
          "Compliance checklist"
        ]
      },
      "tags": ["security", "audit", "owasp", "vulnerabilities", "compliance"]
    },
    {
      "id": "test-coverage-improver",
      "name": "Test Coverage Improver",
      "description": "Analyzes existing tests, identifies gaps, and generates new test cases. Go from 60% to 90% test coverage without writing tests yourself.",
      "category": "testing",
      "difficulty": "intermediate",
      "duration": "4-5 minutes",
      "agents": ["test-coverage", "modular-builder"],
      "valueProposition": "Go from 60% to 90% test coverage without writing tests yourself.",
      "useCases": [
        "Increase test coverage for CI/CD requirements",
        "Identify untested code paths",
        "Generate edge case tests",
        "Create integration test suites",
        "Validate error handling coverage"
      ],
      "inputs": {
        "source_files": {
          "type": "files",
          "description": "Source files to test",
          "required": true,
          "example": "src/**/*.py"
        },
        "test_files": {
          "type": "files",
          "description": "Existing test files",
          "required": true,
          "example": "tests/**/*.py"
        },
        "framework": {
          "type": "select",
          "description": "Testing framework",
          "options": ["pytest", "jest", "junit", "mocha"],
          "default": "pytest"
        },
        "target_coverage": {
          "type": "number",
          "description": "Target coverage percentage",
          "default": 90
        }
      },
      "outputs": {
        "format": "code",
        "includes": [
          "Coverage gap analysis",
          "Generated test code",
          "Coverage improvement report",
          "Test strategy recommendations"
        ]
      },
      "tags": ["testing", "coverage", "quality", "automation"]
    },
    {
      "id": "bug-finder-fixer",
      "name": "Bug Finder & Fixer",
      "description": "Systematically finds bugs in code and suggests fixes. Uses hypothesis-driven debugging to locate issues and provide tested solutions.",
      "category": "code-quality",
      "difficulty": "beginner",
      "duration": "3-4 minutes",
      "agents": ["bug-hunter", "modular-builder"],
      "valueProposition": "Find and fix bugs systematically with AI-powered debugging.",
      "useCases": [
        "Debug failing tests",
        "Find edge case bugs",
        "Analyze error logs",
        "Fix runtime errors",
        "Systematic debugging workflow"
      ],
      "inputs": {
        "code_file": {
          "type": "file",
          "description": "Code file with potential bugs",
          "required": true,
          "example": "src/app.py"
        },
        "error_message": {
          "type": "text",
          "description": "Error message or symptom",
          "required": false,
          "example": "KeyError: 'user_id'"
        },
        "test_file": {
          "type": "file",
          "description": "Test file showing failure",
          "required": false,
          "example": "tests/test_app.py"
        }
      },
      "outputs": {
        "format": "markdown",
        "includes": [
          "Bug analysis and root cause",
          "Proposed fixes with code",
          "Test cases to prevent regression",
          "Explanation of the issue"
        ]
      },
      "tags": ["debugging", "bugs", "fixes", "quality"]
    }
  ]
}
